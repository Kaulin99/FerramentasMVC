@using FerramentasMVC.Models
@model FerramentasViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastro de ferramentas</h2>

<div class="row">
    <div class="col-md-4">
        <form action="Salvar" method="post">
            <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />

            @if (ViewBag.Operacao == "E")
            {
                <label for="Id" class="control-label">Código do produto</label>
                <input type="number" name="id" value="@Model.Id" class="form-control disabled" readonly />
            }
            <span asp-validation-for="Id" class="text-danger"></span>
            <br />

            <label for="descricao" class="control-label">Descrição da ferramenta</label>
            <input type="text" Name="descricao" value="@Model.descricao" class="form-control" />
            <span asp-validation-for="descricao" class="text-danger"></span>
            <br />

            <label for="FabricanteId" class="control-label">Código do fabricante</label>
            <input type="number" name="FabricanteId" value="@Model.FabricanteId" class="form-control" />
            <span asp-validation-for="FabricanteId" class="text-danger"></span>
            <br />

            <input type="submit" value="Salvar dados" />
            <br />
        </form>
    </div>
</div>
